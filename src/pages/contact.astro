---
import BaseLayout from '@layouts/BaseLayout.astro';
import HoverPreview from '@components/HoverPreview.astro';
---

<BaseLayout
  title="Contact"
  description="Contact details and office directions for Peter Gracar at the University of Leeds."
  canonicalPath="/contact.html"
>
  <div class="content-shell stack">
    <section class="panel reveal flow">
      <h1 class="page-title">Contact</h1>
      <p>
        <strong>Email:</strong> <span id="email-link">(enable JavaScript to view)</span>
      </p>
      <p>
        <strong>Office:</strong> 9.10p1 in the Maths Research Deck of the EC Stoner building. The deck can be
        accessed either by Staircase 1 (next to the IT Service Desk) or through the door opposite the main
        School of Mathematics entrance and then following the signs. This
        <HoverPreview
          label="map"
          imageSrc="/img/Map.webp"
          imageAlt="Map showing the route to office 9.10p1 in EC Stoner"
          width={1764}
          height={1372}
        />
        can help.
      </p>
      <p class="callout compact">
        <strong>Address:</strong> School of Mathematics, University of Leeds, Leeds LS2 9JT, UK.
      </p>
    </section>

    <section class="card reveal reveal-delay flow">
      <h2>Quick Links</h2>
      <div class="inline-links">
        <a href="/map.html">Directions Page</a>
        <a href="https://eps.leeds.ac.uk/maths">School of Mathematics</a>
      </div>
    </section>
  </div>

  <script is:inline>
    (() => {
      const encoded = 'UC5HcmFjYXJAbGVlZHMuYWMudWs=';
      const value = atob(encoded);
      const target = document.getElementById('email-link');
      if (!target) return;
      target.innerHTML = `<a href="mailto:${value}">${value}</a>`;
    })();
  </script>
</BaseLayout>
