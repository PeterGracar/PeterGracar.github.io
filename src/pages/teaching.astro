---
import BaseLayout from '@layouts/BaseLayout.astro';
import { modules } from '@data/teaching';
---

<BaseLayout
  title="Teaching"
  description="Teaching modules and responsibilities for Peter Gracar at the University of Leeds."
  canonicalPath="/teaching.html"
>
  <div class="content-shell stack">
    <section class="panel reveal flow">
      <h1 class="page-title">Teaching</h1>
      <p>
        Information and material for modules can be found on the
        <strong><a href="https://minerva.leeds.ac.uk">Minerva</a></strong> module pages.
      </p>
      <p class="callout compact">I am currently involved in the following modules.</p>
      <ul class="module-grid">
        {
          modules.map((module) => (
            <li>
              <span>
                <span class="module-code">{module.code}</span>: {module.title}
              </span>
              <span class="chip">{module.role}</span>
            </li>
          ))
        }
      </ul>
    </section>
  </div>
</BaseLayout>
